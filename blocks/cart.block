{.if shoppingCart.entries.0}
  <a href="{shoppingCart|cart-url}" class="Cart {squarespace.cart-classes} Header-nav-item{.if active} Header-nav-item--active{.end}" data-test="template-cart">
    <span class="Cart-inner">

      <svg class="Icon Icon--cart-custom">
        <use class="use--odd" xlink:href="/assets/cart.svg#cart"></use>
      </svg>
      <span class="Cart-label"></span>
      {shoppingCart|cart-quantity}
    </span>
  </a>
{.end}
